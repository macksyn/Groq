{
  "name": "groq-ai",
  "version": "2.0.0",
  "description": "Modular WhatsApp Bot with PM2 Support",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "pm2-runtime ecosystem.config.cjs",
    "dev": "node --watch index.js",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop Groq AI",
    "pm2:restart": "pm2 restart Groq AI",
    "pm2:reload": "pm2 reload Groq AI",
    "pm2:logs": "pm2 logs Groq AI --lines 100",
    "pm2:monit": "pm2 monit",
    "pm2:delete": "pm2 delete Groq AI",
    "pm2:dev": "pm2 start ecosystem.config.cjs --env development",
    "pm2:prod": "pm2 start ecosystem.config.cjs --env production",
    "health": "curl http://localhost:3000/health"
  },
  "dependencies": {
    "@distube/ytdl-core": "^4.16.12",
    "@whiskeysockets/baileys": "latest",
    "@xaviabot/fb-downloader": "^1.0.14",
    "axios": "^1.0.0",
    "chalk": "^5.0.0",
    "dayjs": "^1.11.18",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "express-rate-limit": "^8.1.0",
    "fb-downloader-scrapper": "^3.0.1",
    "helmet": "^8.1.0",
    "megajs": "^1.0.0",
    "moment-timezone": "^0.5.0",
    "mongodb": "^6.0.0",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.0",
    "pino": "^8.21.0",
    "pino-pretty": "^13.1.2",
    "sharp": "^0.32.6"
  },
  "devDependencies": {
    "pm2": "^6.0.13"
  }
}
